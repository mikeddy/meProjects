<?xml version="1.0" encoding="utf-8"?><layer-list xmlns:android="http://schemas.android.com/apk/res/android" > <!-- outer circle -->    <item        android:bottom="2dp"        android:left="2dp"        android:right="2dp"        android:top="2dp">        <shape android:shape="oval" >            <corners android:radius="16dp" />            <solid android:color="@color/red" />            <stroke                android:dashGap="0dp"                android:width="4dp"                android:color="@android:color/white" />        </shape>    </item> <!-- inner shadow of outer circle -->    <item        android:bottom="20dp"        android:left="20dp"        android:right="20dp"        android:top="20dp">        <rotate            android:duration="1000"            android:fromDegrees="0"            android:pivotX="50%"            android:pivotY="50%"            android:toDegrees="360" >            <shape android:shape="rectangle" >                <corners android:radius="16dp" />                <solid android:color="#80065e8d" />                <stroke                    android:dashGap="0dp"                    android:width="4dp"                    android:color="@android:color/white" />            </shape>        </rotate>    </item>    <item        android:bottom="20dp"        android:left="20dp"        android:right="20dp"        android:top="20dp">        <rotate            android:duration="1000"            android:fromDegrees="0"            android:pivotX="40%"            android:pivotY="40%"            android:toDegrees="360" >            <shape android:shape="rectangle" >                <corners android:radius="16dp" />                <solid android:color="#3cb025" />                <stroke                    android:dashGap="0dp"                    android:width="4dp"                    android:color="@android:color/white" />            </shape>        </rotate>    </item>    <item        android:bottom="20dp"        android:left="20dp"        android:right="20dp"        android:top="20dp">        <rotate            android:duration="1000"            android:fromDegrees="0"            android:pivotX="30%"            android:pivotY="30%"            android:toDegrees="360" >            <shape android:shape="rectangle" >                <corners android:radius="16dp" />                <solid android:color="#b38dd7" />                <stroke                    android:dashGap="0dp"                    android:width="4dp"                    android:color="@android:color/white" />            </shape>        </rotate>    </item></layer-list>