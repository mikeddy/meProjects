<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center" >

    <com.example.aademo.widget.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/default_header_ico" />

    <com.example.aademo.widget.CircularImageView
        android:id="@+id/imgDoge"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:clickable="true"
        android:src="@drawable/default_header_ico"
        app:civ_border="true"
        app:civ_borderColor="#FFFFFFFF"
        app:civ_borderWidth="4dp"
        app:civ_selector="true"
        app:civ_selectorColor="#4444ccfc"
        app:civ_selectorStrokeColor="#aa5677fc"
        app:civ_selectorStrokeWidth="4dp"
        app:civ_shadow="true"/>

    <com.example.aademo.widget.SelImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:clickable="true"
        android:src="@drawable/default_header_ico"
        app:civ_selectorColor="#4444ccfc"
        app:civ_selectorStrokeColor="#aa5677fc"/>
</LinearLayout>