<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jianbian_tv_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/drawable_xml_item1_1" />

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/drawable_xml_item1_2" />

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/drawable_xml_item1_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable_xml_item2_1"
            android:gravity="center"
            android:text="金属光泽" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_item_2_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drawable_xml_item2_2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_item_2_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/drawable_xml_item2_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/drawable_xml_item3_1" />

        <ImageView
            android:id="@+id/img_item_3_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/drawable_xml_item3_2" />

        <ImageView
            android:id="@+id/img_item_3_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/drawable_xml_item3_3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_item_4_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/drawable_xml_item4_1"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>