<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.example.aademo.widget.NoSoftInputEditText
        android:id="@+id/softinput_edit_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_weight="1.0"
                      android:orientation="horizontal"
                      android:layout_height="0dp">
            <Button
                android:id="@+id/softinput_btn_1"
                android:layout_width="0dp"
                android:text="1"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_2"
                android:layout_width="0dp"
                android:text="2"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="3"
                android:layout_weight="1.0"/>

        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_weight="1.0"
                      android:orientation="horizontal"
                      android:layout_height="0dp">
            <Button
                android:id="@+id/softinput_btn_4"
                android:layout_width="0dp"
                android:text="4"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_5"
                android:layout_width="0dp"
                android:text="5"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_6"
                android:layout_width="0dp"
                android:text="6"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>

        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_weight="1.0"
                      android:orientation="horizontal"
                      android:layout_height="0dp">
            <Button
                android:id="@+id/softinput_btn_7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="7"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_8"
                android:layout_width="0dp"
                android:text="8"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_9"
                android:layout_width="0dp"
                android:text="9"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>

        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_weight="1.0"
                      android:orientation="horizontal"
                      android:layout_height="0dp">
            <Button
                android:id="@+id/softinput_btn_0"
                android:layout_width="0dp"
                android:text="0"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>


        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_weight="1.0"
                      android:orientation="horizontal"
                      android:layout_height="0dp">
            <Button
                android:id="@+id/softinput_btn_point"
                android:layout_width="0dp"
                android:text="."
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_tract"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="-"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/softinput_btn_del"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="del"
                android:layout_weight="1.0"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>